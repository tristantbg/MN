.container
	padding 0 $padding
	+below($desktop)
		padding 0 ($padding/2)

.wrap
	span(11/12)
	margin-top 10%
	+below($desktop)
		span(1)
		line-height 1.1em

section
	width 100%
	height 100vh
	+below($desktop)
		height auto
	clear both
	min-height 100vh

[data-target]
	cursor pointer

.blink {
  animation: blinker 500ms linear infinite;
}

@keyframes blinker {  
  50% { opacity: 0.0; }
