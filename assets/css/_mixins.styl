// Example: webfont('Franklin Gothic', 'franklingothic', true, 'bold')

font-url(file)
	return '../fonts/' + file

webfont(family, file, hack-chrome-windows = false, weight = 'normal')
	@font-face
		font-family family
		src url(font-url(file + '.eot'))
		src url(font-url(file + '.eot?#iefix')) format('embedded-opentype'),
			url(font-url(file + '.woff')) format('woff'), 
			url(font-url(file + '.ttf')) format('truetype'), 
			url(font-url(file + '.svg#'+ family)) format('svg')
		font-weight weight
		font-style normal
	if hack-chrome-windows
		@media screen and (-webkit-min-device-pixel-ratio:0)
			@font-face
				font-family family
				src url(font-url(file + '.svg#'+ family)) format('svg')

hideselect()
	-webkit-backface-visibility hidden
	backface-visibility hidden
	-webkit-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none
	-webkit-transform-style flat
	transform-style flat
	-webkit-tap-highlight-color transparent
	-webkit-user-drag none
	outline 0

 
 // First paragraph is flush, all paragraphs after are indented
 // Example: .paragraph 
 // 			flowing-paragraph(0.5em)

flowing-paragraph(n)
	p
		margin-bottom: 0
	p + p
		text-indent: (n)

// Control type size and spacing for abbreviations
// Example: .paragraph
// 				abbreviation(26px,0.4em)

abbr(type-size, kerning)
	abbr
		font-size: type-size
		letter-spacing: kerning

// Antialiasing applied to light type on dark backgrounds
// Example: .paragraph
// 				font-smooth()

font-smoothing()
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;

boxsizing()
	*, *:after, *:before
		-webkit-box-sizing border-box
		-moz-box-sizing border-box
		-ms-box-sizing border-box
		-o-box-sizing border-box
		box-sizing border-box


// Vertical and horizontal centering, use sparingly as it degrade type integrity
// Example: .element
// 				dead-center(fixed)

dead-center(position)
	position: position
	top 50%
	left 50%
	transform: translate(-50%,-50%)

flexbox()
	display -webkit-box
	display -moz-box
	display -ms-flexbox
	display -webkit-flex
	display flex

border-radius(args)
	-webkit-border-radius args
	-moz-border-radius args
	-ms-border-radius args
	-o-border-radius args
	border-radius args

box-shadow(args)
	-webkit-box-shadow args
	-moz-box-shadow args
	-ms-box-shadow args
	-o-box-shadow args
	box-shadow args
	
transition(what = all,time = 300ms,easing = ease)
	-webkit-transition what time easing
	-moz-transition what time easing
	-ms-transition what time easing
	-o-transition what time easing
	transition what time easing
	
transform(arg)
	-webkit-transform arg
	-moz-transform arg
	-ms-transform arg
	-o-transform arg
	transform arg

box-sizing()
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	box-sizing border-box
